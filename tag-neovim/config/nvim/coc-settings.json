{
  "coc.preferences.formatOnSaveFiletypes": ["javascript", "css", "typescript", "typescriptreact", "graphql"],
  "eslint.autoFixOnSave": true,
  "javascript.validate.enable": false,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "tsserver.enableJavascript": false,
  "tsserver.log": "normal",
  "css.customData": ["~/.config/nvim/custom.css-data.json"],
  "css.lint.unknownAtRules": "ignore",
  "languageserver": {
     "rescript": {
       "enable": true,
       "module": "~/.local/share/nvim/plugged/vim-rescript/rescript-vscode/extension/server/out/server.js",
       "args": ["--node-ipc"],
       "filetypes": ["rescript"],
       "rootPatterns": ["bsconfig.json"]
     },
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      // customize filetypes to your needs
      "filetypes": ["graphql"]
    },
    "flow": {
      "command": "${workspaceFolder}/node_modules/.bin/flow",
      "args": ["lsp"],
      "filetypes": ["javascript", "javascriptreact"],
      "initializationOptions": {},
      "requireRootPattern": true,
      "settings": {},
      "rootPatterns": [".flowconfig"]
    },
    "groovy": {
      "command": "java",
      "args" : ["-jar", "/usr/share/java/groovy-language-server/groovy-language-server-all.jar"],
      "filetypes": ["groovy"]
    }
  }
}

