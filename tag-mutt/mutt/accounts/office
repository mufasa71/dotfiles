# vim: ft=muttrc

set my_realname="Shukhrat Mukimov"
set my_username="smukimov"
set my_domain="appulate.com"
set my_password="This password is secure"
set my_lang="en_US"

# Loading language properties

source "~/.mutt/lang/$my_lang"

set imap_user="$my_username@$my_domain"
set imap_pass=$my_password

set folder="imaps://outlook.office365.com/"

set from = "mukimov@gmail.com"
set sendmail = "/usr/bin/msmtp -a gmail"
set mbox = "+gmail/archive"
set postponed = "+gmail/drafts"

macro index ,c "<change-folder>+muranosoft/INBOX<enter>" "change accounts"

macro index ,z "<shell-escape>mbsync --pull-new gmail-inbox<enter>" "sync IMAP"
macro index d "<save-message>+gmail/trash<enter>" "move message to the trash"
macro index S "<save-message>+gmail/spam<enter>" "mark message as spam"
macro index ,D \
"<tag-pattern>all<enter><tag-prefix><save-message>+gmail/trash<enter>" "delete all"
