# vim: ft=muttrc
  set askcc
unset confirmappend
  set delete
  set editor = "vim +:silent+?^$"
  set fast_reply
  set folder = ~/Mail
  set forward_format = "Fwd: %s"
  set forward_quote
  set header_cache = ~/.cache/mutt/headers
unset help
  set include
  set index_format = "%3C %Z %[!%m/%d] %-17.17F %s"
  set mailcap_path = ~/.mutt/mailcap
unset mark_old
unset markers
  set mail_check = 0
  set mbox_type = Maildir
  set menu_scroll
  set pager_context = 5
  set pager_index_lines = 10
  set pager_stop
  set pipe_decode
  set realname = "***Removed***"
unset record
  set reply_to
  set reverse_name
  set signature = $HOME/.mutt/signature
  set sort = threads
  set sort_aux = reverse-last-date-received
  set spoolfile = "+gmail/INBOX"
  set status_format = "-%r- %f%?t? Tagged:%t?%?p? Drafts:%p? -%>-"
  set strict_threads
  set thorough_search
  set tilde
  set timeout = 3
  set tmpdir = ~/.cache/mutt

auto_view text/html
alternative_order text/plain text/enriched text/html

ignore *
unignore from: to: cc: date: subject:
hdr_order from: to: cc: date: subject:

subscribe arch-announce arch-dev-public arch-hakell aur-general \
          rubyparley vim web-devel xmonad yesod

# abook
set query_command="abook --mutt-query '%s'"

source ~/.mutt/colors
source ~/.mutt/mailboxes
