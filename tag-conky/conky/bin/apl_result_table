#/bin/bash
RESULT=$(curl -s http://www.premierleague.com/content/premierleague/en-gb/matchday/league-table.html | pup 'table.leagueTable tbody tr.club-row json{}' | jq -r '.[].children | if (.[0].text | length) == 1 then "0" else "" end + .[0].text + " | " + .[11].text + "  | " + .[3].text')

  (echo "## | Pts | Club"
   echo "$RESULT") | dzen2 -p -x "1550" -y "20" -w "240" -l "20" -sa 'l' -ta 'l' -fg yellow \
  -title-name 'APL Results' -e 'onstart=uncollapse;button1=exit;button3=exit'
